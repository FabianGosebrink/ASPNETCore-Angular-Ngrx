{
  "name": "emeal",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve -o",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build": "ng build --prod --stats-json --output-path=\".dist/web\"",
    "build-web": "npm run build && npm run precache",
    "precache": "sw-precache --verbose --config=sw-precache-config.js",
    "prepare-desktop":
      "mkdirp ./.temp/electron && ncp assets/electron .temp/electron/ && ncp .dist/web .temp/electron/ && rimraf .dist/desktop/",
    "build-desktop":
      "npm run prepare-desktop && electron-packager .temp/electron/ --electsronVersion=1.6.5 --icon=\"assets/electron/icon\" --platform=win32,linux --out=./.dist/desktop/",

    "mobile-generate-assets":
      "cd .temp/mobile && cordova-icon --icon=\"../../assets/img/icon.png\" && cordova-splash --splash=\"../../assets/img/splash.png\"",
    "build-mobile":
      "npm run mobile-prepare && npm run mobile-prepare-android && npm run mobile-generate-assets && npm run mobile-build-android && npm run copy-mobile-to-dist",
    "mobile-prepare":
      "rimraf ./.temp/mobile && mkdirp ./.temp/mobile/www && ncp assets/cordova .temp/mobile/ && ncp .dist/web .temp/mobile/www && rimraf .dist/mobile/",
    "mobile-prepare-android":
      "mkdirp .dist/mobile/android && cd .temp/mobile && cordova prepare android && cd ../..",
    "mobile-build-android": "cd .temp/mobile && cordova build && cd ../..",

    "copy-mobile-to-dist":
      "ncp .temp/mobile/platforms/android .dist/mobile/android",

    "build-all":
      "rimraf .dist && npm run build-web && npm run build-mobile && npm run build-desktop && npm run cleanup",
    "bundle-report": "webpack-bundle-analyzer .dist/web/stats.json",
    "cleanup": "rimraf .temp"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.2.2",
    "@angular/common": "^5.2.2",
    "@angular/compiler": "^5.2.2",
    "@angular/core": "^5.2.2",
    "@angular/forms": "^5.2.2",
    "@angular/http": "^5.2.2",
    "@angular/platform-browser": "^5.2.2",
    "@angular/platform-browser-dynamic": "^5.2.2",
    "@angular/router": "^5.2.2",
    "@ngrx/effects": "^5.0.1",
    "@ngrx/router-store": "^5.0.1",
    "@ngrx/store": "^5.0.0",
    "angular2-toaster": "^4.0.2",
    "bootstrap": "^3.3.7",
    "core-js": "^2.5.3",
    "electron": "^1.7.11",
    "font-awesome": "^4.7.0",
    "jquery": "^3.3.1",
    "ngx-electron": "^1.0.4",
    "rxjs": "^5.5.6",
    "zone.js": "^0.8.20"
  },
  "devDependencies": {
    "@angular/cli": "1.6.6",
    "@angular/compiler-cli": "^5.2.2",
    "@angular/language-service": "^5.2.2",
    "@types/jasmine": "2.8.6",
    "@types/node": "~9.4.0",
    "codelyzer": "~4.1.0",
    "cordova-icon": "^0.11.0",
    "cordova-splash": "^0.10.0",
    "electron-packager": "^10.1.2",
    "jasmine-core": "~2.9.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.4.1",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-mocha-reporter": "^2.2.5",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "protractor": "~5.3.0",
    "sw-precache": "^5.2.1",
    "ts-node": "~4.1.0",
    "tslint": "~5.9.1",
    "typescript": "2.6.2",
    "webpack-bundle-analyzer": "^2.9.2"
  }
}
