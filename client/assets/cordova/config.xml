<?xml version="1.0" encoding="utf-8"?>
    <widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="offering.solutions" version="0.0.1">
    <name>eMeal</name>
    <description>
        A small demo app to give yoou FoodSuggestions
    </description>
    <author email="mail@offering.solutions" href="https://fabian-gosebrink.com">
        offering.Solutions
    </author>
    
    <content src="index.html"/>

    <!--<plugin name="cordova-plugin-device" spec="~1.1.5"/>-->
    <plugin name="cordova-plugin-whitelist" version="1.2.2"/>
    <plugin name="cordova-plugin-splashscreen" spec="3.2.2"/>
    <plugin name="cordova-plugin-statusbar" spec="https://github.com/apache/cordova-plugin-statusbar.git"/>
    <plugin name="cordova-plugin-camera" spec="4.0.1"/>
    <plugin name="cordova-plugin-device" spec="1.1.6"/>
    <access origin="*"/>
    <!--<allow-navigation href="*" />-->
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    
    <preference name="StatusBarOverlaysWebView" value="false"/>
    <preference name="Fullscreen" value="false"/>
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashScreenBackgroundColor" value="white"/>
    <preference name="SplashScreen" value="screen"/>

    <preference name="windows-target-version" value="10.0" />

  <engine name="android" spec="~7.0.0" />
</widget>
