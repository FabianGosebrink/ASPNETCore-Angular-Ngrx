{
  "name": "angular-client-webpack-aot-ts",
  "version": "1.0.0",
  "scripts": {
    "start": "tsc && webpack-dev-server --hot --open",
    "lite": "lite-server --config=config/lite-prod-config.json",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "test": "tsc && karma start",
    "lint": "tslint ./app/**/*.ts -t verbose",
    "ngc": "ngc -p tsconfig-aot.json --locale=en-US",
    "webpack-dev": "set NODE_ENV=development && webpack",
    "webpack-prod": "npm run ngc && set NODE_ENV=production && webpack",
    "build-web": "npm run webpack-dev && npm run webpack-prod",
    "prepare-desktop": "mkdirp ./.temp/electron && ncp assets/electron .temp/electron/ && ncp .dist/web/aot .temp/electron/ && rimraf .dist/desktop/",
    "build-desktop": "npm run prepare-desktop && electron-packager .temp/electron/ --electronVersion=1.6.5 --icon=\"assets/electron/icon\" --platform=win32,linux --out=./.dist/desktop/",
    "prepare-mobile": "rimraf ./.temp/mobile && mkdirp ./.temp/mobile/www && ncp assets/cordova .temp/mobile/ && ncp .dist/web/aot .temp/mobile/www && rimraf .dist/mobile/ && trash .temp/mobile/www/**/*.js.gz",
    "build-mobile-windows": "mkdirp .dist/mobile/windows && cd .temp/mobile && cordova platform add windows && cordova build windows && cd ../.. && ncp .temp/mobile/platforms/windows .dist/mobile/windows",
    "build-mobile-android": "mkdirp .dist/mobile/android && cd .temp/mobile && cordova platform add android && cordova build android && cd ../.. && ncp .temp/mobile/platforms/android .dist/mobile/android",
    "build-mobile": "npm run prepare-mobile && npm run build-mobile-windows && npm run build-mobile-android && npm run cleanup",
    "build-all": "rimraf .dist && npm run build-web && npm run build-mobile && npm run build-desktop && npm run cleanup",
    "cleanup": "rimraf .temp"
  },
  "license": "ISC",
  "dependencies": {
    "@angular/animations": "^4.1.1",
    "@angular/common": "4.1.1",
    "@angular/compiler": "4.1.1",
    "@angular/compiler-cli": "4.1.1",
    "@angular/core": "4.1.1",
    "@angular/forms": "4.1.1",
    "@angular/http": "4.1.1",
    "@angular/platform-browser": "4.1.1",
    "@angular/platform-browser-dynamic": "4.1.1",
    "@angular/platform-server": "4.1.1",
    "@angular/router": "4.1.1",
    "@angular/upgrade": "4.1.1",
    "@ngrx/core": "^1.2.0",
    "@types/electron": "^1.4.37",
    "bootstrap": "^3.3.7",
    "core-js": "2.4.1",
    "electron": "^1.6.6",
    "electron-prebuilt": "^1.4.13",
    "electron-reload": "^1.1.0",
    "font-awesome": "^4.7.0",
    "ie-shim": "~0.1.0",
